{
  "name": "HifiGan+Hope",
  "n_gpu": 1,
  "preprocessing": {
      "spectrogram": {
          "args": {
            "sr": 22050,
            "win_length": 1024,
            "hop_length": 256,
            "n_fft": 1024,
            "f_min": 0,
            "f_max": 8000,
            "n_mels": 80,
            "power": 1.0,
            "pad_value": -11.5129251
          }
      },
      "log_spec": false
  },
  "arch": {
      "type": "HifiGan",
      "args": {
        "model_config": {
            "generator": {
                "upsample_rates": [8,8,2,2],
                "upsample_kernel_sizes": [16,16,4,4],
                "resblock_kernel_sizes": [3,7,11],
                "resblock_dilation_sizes": [[1,3,5], [1,3,5], [1,3,5]],
                "initial_channels": 512,
                "n_mels": 80,
                "pre_kernel_size": 7,
                "post_kernel_size": 7,
                "neg_slope": 0.1
            }


        }
      }
  },
  "data": {
      "train": {
          "batch_size": 48,
          "num_workers": 5,
          "datasets": [
              {
                  "type": "LJspeechDataset",
                  "args": {
                      "part": "train"
                  }
              }
          ]
      },
      "val": {
          "batch_size": 32,
          "num_workers": 5,
          "datasets": [
            {
                "type": "LJspeechDataset",
                "args": {
                    "part": "test"
                }
            }
          ]
      }
  },
  "optimizer": {
      "type": "AdamW",
      "args": {
        "lr": 0.0002,
        "betas": [0.8, 0.99],
        "eps": 1e-9
      }
  },
  "loss": {
      "type": "HifiGanLoss",
      "args": {
        "lambda_fm": 2,
        "lambda_mel": 45
      }
  },
  "metrics": [
      {}
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 1e-2,
      "pct_start": 0.2
    }
  },
  "trainer": {
      "epochs": 200,
      "save_dir": "saved/",
      "save_period": 10,
      "verbosity": 2,
      "monitor": "min train_loss",
      "early_stop": 160,
      "visualize": "wandb",
      "wandb_project": "tts_project",
      "len_epoch": 1000,
      "grad_norm_clip": 10
  }
}